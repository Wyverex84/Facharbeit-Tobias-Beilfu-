import java.awt.Color;
import greenfoot.*;
import java.awt.Font;

/**
 * The purpose of this interface is to make it possible for an object that uses a Menu object to be able to register for notification whenever the mouse is
 * clicked on a menu item.
 * 
 * @author Dick Baldwin 
 * @version 07/15/08
 */
public interface MenuUserIntfc{
  public void clickCallback(Menu source,int menuItemClicked);
  public void moveCallback(Menu source,int menuItemMoved);
}//end interface MenuUserIntfc